<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    tools:context=".GamePT2">

    <!--TODO
    CHANGE COLOUR OF TOP ROW

    -->

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />


    <EditText
        android:id="@+id/answerBox"
        android:maxLength="9"
        android:visibility="gone"
        android:layout_width="181dp"
        android:layout_height="101dp"
        android:gravity="bottom"
        android:hint="Enter\nNumber"
        android:inputType="number"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/questionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Click start to begin!"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="193dp"
        android:layout_height="51dp"
        android:visibility="gone"
        android:progress="0"
        android:min="0"
        android:max="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="733dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete"
        />

    <TableLayout

        android:id="@+id/scoresTable"

        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:background="@color/white"
        android:gravity="center"
        android:stretchColumns="0,1,2,3,4,5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_top_left"
                android:gravity="center"
                android:text=" Name "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numbColumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_top_center"
                android:gravity="center"
                android:outlineProvider="bounds"
                android:text=" Number "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeColumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"

                android:background="@drawable/table_top_center"
                android:gravity="center"
                android:text=" Time "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateColumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:background="@drawable/table_top_right"
                android:gravity="center"
                android:text=" Date "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/table_left"
                android:maxLines="1"
                android:gravity="center"
          
                />

            <TextView
                android:id="@+id/numb0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/table_center"

                android:gravity="center"
               />

            <TextView
                android:id="@+id/time0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center"
                android:gravity="center"
             />


            <TextView
                android:id="@+id/date0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:background="@drawable/table_right"

                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_left_alt"
                android:gravity="center"
           />

            <TextView
                android:id="@+id/numb1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_center_alt"
                android:gravity="center"
            />

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center_alt"
                android:gravity="center"
             />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_right_alt"
                android:gravity="center"
                 />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/table_left"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numb2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_right"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_left_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numb3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_center_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/date3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_right_alt"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_bottom_left"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numb4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/table_bottom_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"

                android:background="@drawable/table_bottom_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/date4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_bottom_right"
                android:gravity="center"
                android:text="" />
        </TableRow>

    </TableLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/submitName"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/liner_layout_rounded_corners"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238">

        <TextView
            android:id="@+id/winningMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="You win!"
            android:textSize="48dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/winningMessage"
            android:layout_marginTop="19dp">

            <EditText
                android:id="@+id/enterName"
                android:maxLength="14"
                android:layout_width="232dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/enter_name_textview"
                android:gravity="bottom|left"
                android:hint="Enter Name..."
                android:maxLines="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/submitNameButton"
                android:layout_width="120dp"
                android:layout_height="61dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/enter_name_textview"
                android:backgroundTint="@color/white"
                android:text="Submit" />


        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@id/winningMessage"
            android:layout_alignBottom="@id/winningMessage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-27dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="27dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>