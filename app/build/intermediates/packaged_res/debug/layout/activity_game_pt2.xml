<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePT2">

    <!--TODO
    CHANGE COLOUR OF TOP ROW

    -->

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />


    <EditText
        android:id="@+id/answerBox"
        android:layout_width="181dp"
        android:layout_height="101dp"
        android:gravity="center"
        android:hint="Enter\nNumber"
        android:inputType="number"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/questionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Click start to begin!"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="193dp"
        android:layout_height="51dp"
        android:visibility="gone"
        android:progress="0"
        android:min="0"
        android:max="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="733dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete"
        />

    <TableLayout

        android:id="@+id/scoresTable"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:background="@color/white"
        android:gravity="center"
        android:stretchColumns="0,1,2,3,4,5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_top_left"
                android:gravity="center"
                android:text=" Name "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numbColumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_top_center"
                android:gravity="center"
                android:outlineProvider="bounds"
                android:text=" Number "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeColumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"

                android:background="@drawable/table_top_center"
                android:gravity="center"
                android:text=" Time "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateColumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:background="@drawable/table_top_right"
                android:gravity="center"
                android:text=" Date "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/table_left"

                android:gravity="center"
                android:text=""

                />

            <TextView
                android:id="@+id/numbOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/table_center"

                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/timeOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center"
                android:gravity="center"
                android:text="" />


            <TextView
                android:id="@+id/dateOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:background="@drawable/table_right"


                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/nameTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_left_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numbTwo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_center_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/timeTwo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/dateTwo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_right_alt"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/nameThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:background="@drawable/table_left"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numbThree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/timeThree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/dateThree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_right"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/nameFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_left_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numbFour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"

                android:background="@drawable/table_center_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/timeFour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="@drawable/table_center_alt"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/dateFour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_right_alt"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:background="@drawable/table_bottom_left"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/numbFive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@drawable/table_bottom_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/timeFive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"

                android:background="@drawable/table_bottom_center"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/dateFive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"

                android:background="@drawable/table_bottom_right"
                android:gravity="center"
                android:text="" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

